%div{class:'flex flex-col justify-center items-center'}
  %h2{class: 'font-bold text-5xl mb-4'} ALBUMS
  %table{class: 'w-4/5 border border-black'}
    %thead
    %tr
      %th{class: 'border border-black'} action
      %th{class: 'border border-black'} name
      %th{class: 'border border-black'} released
      %th{class: 'border border-black'} released_at
      %th{class: 'border border-black'} cover_art_url 
      %th{class: 'border border-black'} kind
      %th{class: 'border border-black'} length 
    %tbody
    - @albums.each do |album|
      %tr 
        %td{class: 'border border-black text-center'}
          = link_to 'Edit', edit_album_path(album.id), class:'hover:text-green-400'
          |
          = link_to 'Delete', album_path(album.id), method: :delete, data: {confirm: "Are you sure"},class:'hover:text-red-400'
        %td{class: 'border border-black text-center'}= album.name
        %td{class: 'border border-black text-center'}= album.released
        %td{class: 'border border-black text-center'}= album.released_at
        %td{class: 'border border-black text-center'}= album.cover_art_url
        %td{class: 'border border-black text-center'}= album.kind
        %td{class: 'border border-black text-center'}= album.length 
  %br
  %button{class:'h-12 w-48 text-white font-bold bg-green-400 py-1 px-12 rounded hover:bg-green-700 mb-4'}
    = link_to 'New Album', 'albums/new'
  %button{class:'h-12 w-48 text-white font-bold bg-green-400 py-1 px-12 rounded hover:bg-green-700'}
    = link_to 'Back', 'static/home'
