%div{class:'flex flex-col justify-center items-center'}
  %h2{class: 'font-bold text-5xl w-4/5 text-center p-4'} ALBUMS
  %div{class: 'w-full h-96 overflow-y-auto overflow-x-hidden'}
    %table{class: 'w-full rounded-t-lg shadow-2xl'}
      %thead
      %tr{class:'text-white bg-blue-400'}
        %th{class: ''}
        %th{class: ''}
        %th{class: ''} NAME
        %th{class: ''} RELEASED
        %th{class: ''} RELEASED AT
        %th{class: ''} COVER ART URL
        %th{class: ''} KIND
        %th{class: ''} LENGTH
      %tbody
      - @albums.each do |album|
        %tr{class: 'bg-gray-100 border border-white text-center'} 
          %td{class: ' hover:bg-blue-400 hover:text-white'}
            = link_to 'Edit', edit_album_path(album.id), class:''
          %td{class: ' hover:bg-red-400 hover:text-white'}
            = link_to 'Delete', album_path(album.id), method: :delete, data: {confirm: "Are you sure"},class:''
          %td{class: ''}= album.name
          %td{class: ''}= album.released
          %td{class: ''}= album.released_at
          %td{class: ''}= album.cover_art_url
          %td{class: ''}= album.kind
          %td{class: ''}= album.length 
  %br
  %button{class:'h-12 w-48 text-white font-bold bg-blue-400 py-1 px-12 rounded hover:bg-blue-700 mb-4'}
    = link_to 'New Album', 'albums/new'
  %button{class:'h-12 w-48 text-white font-bold bg-blue-400 py-1 px-12 rounded hover:bg-blue-700'}
    = link_to 'Back', 'static/home'
