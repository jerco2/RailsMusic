%div{class:'w-screen h-screen flex flex-col justify-center items-center'}
  %h1{class:'font-bold text-5xl mb-4'} NEW ALBUM
  - if @albums.errors.any?
    - @albums.errors.full_messages.each do |error|
      %p{class:'text-red-400'}= error
  
  = form_with model: @albums do |f|
    %div{class:'flex justify-between'}
      = f.label :name,class:'w-full border border-black p-1'
      = f.text_field :name,class:'border border-black border-l-0 p-1'

    %div{class:'flex justify-between'}
      = f.label :released,class:'w-full border border-black p-1 border-t-0'
      = f.select :released, ['true', 'false'],class:'border border-black border-l-0 border-t-0 p-1'

    %div{class:'flex justify-between'}
      = f.label :released_at,class:'w-full border border-black p-1 border-t-0'
      = f.date_field :released_at,class:'border border-black border-l-0 border-t-0 p-1'

    %div{class:'flex justify-between'}
      = f.label :cover_art_url,class:'w-full border border-black p-1 border-t-0'
      = f.text_field :cover_art_url,class:'border border-black border-l-0 border-t-0 p-1'

    %div{class:'flex justify-between'}
      = f.label :kind,class:'w-full border border-black p-1 border-t-0'
      = f.text_field :kind,class:'border border-black border-l-0 border-t-0 p-1'

    %div{class:'flex justify-between'}
      = f.label :length,class:'w-full border border-black p-1 border-t-0'
      = f.text_field :length,class:'border border-black border-l-0 border-t-0 p-1'

    %br

    = f.submit 'ADD ALBUM', class:'cursor-pointer h-12 w-48 text-white font-bold bg-blue-400 py-1 px-12 rounded hover:bg-blue-700 mb-4'
    %button{class:'h-12 w-48 text-white font-bold bg-blue-400 py-1 px-12 rounded hover:bg-blue-700 mb-4'}
      = link_to 'BACK', '/albums'