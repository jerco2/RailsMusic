%div{class:'w-screen h-screen flex flex-col justify-center items-center'}
  %h1{class:'font-bold text-5xl mb-4'} NEW TRACK

  = form_with model: @tracks do |f|
    %div{class:'flex justify-between'}
      = f.label :url,class:'w-full border border-black p-1'
      = f.text_field :url,class:'border border-black border-l-0 p-1'

    %div{class:'flex justify-between'}
      = f.label :name,class:'w-full border border-black p-1 border-t-0'
      = f.text_field :name,class:'border border-black border-l-0 border-t-0 p-1'

    %div{class:'flex justify-between'}
      = f.label :credits,class:'w-full border border-black p-1 border-t-0'
      = f.text_field :credits,class:'border border-black border-l-0 border-t-0 p-1'
    
    %div{class:'flex justify-between'}
      = f.label :available,class:'w-full border border-black p-1 border-t-0'
      = f.text_field :available,class:'border border-black border-l-0 border-t-0 p-1'

    %br

    = f.submit 'ADD TRACK', class:'h-12 w-48 text-white font-bold bg-green-400 py-1 px-12 rounded hover:bg-green-700 mb-4'
    %button{class:'h-12 w-48 text-white font-bold bg-green-400 py-1 px-12 rounded hover:bg-green-700 mb-4'}
      = link_to 'BACK', '/artists'